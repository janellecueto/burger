<h1>BURGERS!</h1>

<div class="row">
  <div class="col">
    <h2>Fresh Burgers!</h2>

    <ul>
      {{#each burgers}}
        {{#unless devour}}
          {{> burgers/burger-block devour=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col">
    <h2>Eaten!</h2>

    <ul>
      {{#each burgers}}
        {{#if devour}}
          {{> burgers/burger-block devour=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bn">Burger Name:</label>
    <input type="text" id="bn" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
